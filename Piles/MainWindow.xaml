<Window x:Class="Piles.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Piles"
        xmlns:viewmodels="clr-namespace:Piles.ViewModels"
        d:DataContext="{d:DesignInstance Type=viewmodels:PileViewModel}"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30" />
            <ColumnDefinition/>
            <ColumnDefinition Width="30" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,10,0,0">
            <Button Margin="5,5,5,0">A</Button>
            <Button Margin="5,5,5,0">B</Button>
            <Button Margin="5,5,5,0">C</Button>
        </StackPanel>
        <TabControl Grid.Row="1" Grid.Column="1" Margin="5">
            <TabItem Header="{Binding Name}">
                <StackPanel>
                    <TextBox Text="{Binding RuminationText, UpdateSourceTrigger=PropertyChanged}">
                        <TextBox.InputBindings>
                            <KeyBinding Command="{Binding AddRunminationCommand}" Key="Return" />
                        </TextBox.InputBindings>
                    </TextBox>
                    <ListView ItemsSource="{Binding Ruminations, UpdateSourceTrigger=PropertyChanged}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Description}" />
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
